\begin_inset Formula 
\begin{equation}
\muC_{\Psi}\left(i\right)=\cardp{\fnorm{\ip{i}{\Psi}}}{\fnorm{\ket{\Psi}}}=\cardp{\fnorm{\alpha_{i}}}{\fnorm{\ket{\Psi}}}\,,
\end{equation}

\end_inset

